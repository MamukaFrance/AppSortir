{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Voir mon profil
{% endblock %}


{% block body %}
    <h1>Mon profil</h1>
    <div class="uk-width-1-1@m uk-margin-auto">

        <div class="profil-haut">
            {% if app.user and app.user.photo %}
                <img src="{{ asset('uploads/photos/' ~ app.user.photo) }}" alt="Photo de profil" class="photo_profil">
            {% else %}
                <img src="{{ asset('images/profil_defaut.png') }}" alt="Photo de profil" class="photo_profil">
            {% endif %}

            <div class="profil_haut_droite">
                <div class="uk-margin">
                    <label for="input_nom">Nom :</label>
                    <input type="text" value="{{ app.user.nom }}" id="input_nom" disabled class="uk-input uk-width-1-1">
                </div>

                <div class="uk-margin">
                    <label for="input_prenom">Prénom :</label>
                    <input type="text" value="{{ app.user.prenom }}" id="input_prenom" disabled class="uk-input uk-width-1-1">
                </div>
            </div>
        </div>

        <div class="uk-margin">
            <label for="input_email">Email :</label>
            <input type="text" value="{{ app.user.email }}" id="input_email" disabled class="uk-input uk-width-1-1">
        </div>

        <div class="uk-margin">
            <label for="input_telephone">Téléphone :</label>
            <input type="text" value="{{ app.user.telephone }}" id="input_telephone" disabled class="uk-input uk-width-1-1">
        </div>

        <a href="{{ path('user_edit') }}" class="uk-margin uk-button uk-button-primary uk-width-1-1">Editer mon profil</a>
    </div>
{% endblock %}

