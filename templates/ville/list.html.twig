            <td>{{ ville.nom }}</td>
            <td><a href="{{ path('lieux_list', {'villeId': ville.id}) }}" class="btn btn-sm btn-info ">Voir les lieux</a></td>
{% else %}
<td>Aucune ville trouv√©e</td>
<td>-</td>


        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}